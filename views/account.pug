extends layout

block content
    h2 Edit Profile
    form.form.form--register
        .form__group
            label.mt-5.form__label(for='name')
            input#name.form__input(type='text', value=`${user.name}`, required)
        .form__group
            label.form__label(for='email') Email address
            input#email.form__input(type='email', value=`${user.email}`, placeholder='your@example.com', required)
        .form__group.ma-bt-md
            label.form__label(for='password') Password
            input#password.form__input(type='password', placeholder='••••••••')
        .form__group.ma-bt-md
            label.form__label(for='password') Confirm Password
            input#confirm_password.form__input(type='password', placeholder='••••••••')
        .form__group
            button.btn.btn--green enter