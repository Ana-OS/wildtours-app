extends layout

block content
    .container-fluid
        .row.justify-content-center
            .col-12
            .title
                h2 Create Account
        .row.justify-content-center
            .col-12        
            form.form.form-user-data
                    .form-group
                        label(for='name') Name
                        input#name.form-control(type='text',  required, name='name')
                    .form-group.ma-bt-md
                        label.form__label(for='email') Email address
                        input#email.form-control(type='email', required, name='email')
                    .form-group    
                        label.form__label(for='password') Password
                        input#password.form-control(type='password', placeholder='••••••••')
                    .form-group.ma-bt-md
                        label.form__label(for='password') Confirm Password
                        input#confirm_password.form-control(type='password', placeholder='••••••••')
                    .form-group.mt-3
                        input.form-control-file(type='file', accept='image/*', id='photo', name='photo')
                        label(for='photo') Choose new photo 
                    .form-group
                        button.mt-3.btn.btn-outline-success submit