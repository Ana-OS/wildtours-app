extends layout


block content
    .container-fluid
        .card-deck
            each tour in tours
                .card
                    img.card-img-top(src=`/uploads/${tour.imageCover}`)
                    .card-body 
                        h5.card-title= tour.name 
                        p.card-text= tour.description.substring(0,220) + "..."
                    .card-footer.d-flex.justify-content-around
                        a(href=`/tours/${tour.id}/edit`)   
                            p.mt-2 edit    
                        a(href=`/tours/${tour.id}/delete`)   
                            p.mt-2 delete    
                        //- p(onclick="history.back()") back     


block scripts 