extends layout

block content
    h2 Login to your account
    form.form.form--login
        .form__group
            label.form__label(for='email') Email address
            input#email.form__input(type='email', placeholder='your@example.com', required)
        .form__group.ma-bt-md
            label.form__label(for='password') Password
            input#password.form__input(type='password', placeholder='••••••••')
        .form__group
            button.btn.btn--green enter