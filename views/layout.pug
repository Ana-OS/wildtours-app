doctype html
html
  head
    title= `WildTours`
    link(rel='stylesheet', href='/css/style.css')
    link(rel="shortcut icon" type="image/png" href="/images/img/favicon.png")
    link(href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js")
    link(rel='stylesheet', href='/css/style.css')
    script(defer src="/javascript/map.js")
    script(defer src="/javascript/login.js")
    meta(name="viewport" content="width=device-width, initial-scale=1")
  body
    .navbar.navbar-expand-sm.navbar-light(id="navbar-main")
        a.navbar-brand(href="/" )
            img.cover_image.logo(src="../img/tours/logo.jpg")
        button.navbar-toggler(type='button' data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
            span.navbar-toggler-icon 

        .collapse.navbar-collapse(id="navbarSupportedContent")
            ul.navbar-nav.mr-auto
                if !user  
                    li.nav-item 
                        a#login.nav-link(href="/login") login
                    li.nav-item
                        a#register.nav-link(href="/register") Register      
                else   
                    li.nav-item 
                        p= `Hey ${user.name}`
                    li#logout.nav-item.active
                        a.nav-link(href="#") Logout
                    li.nav-item.dropdown
                        img.avatar.dropdown-toggle(id="navbarDropdown"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://via.placeholder.com/70")
                        .dropdown-menu.dropdown-menu-right( aria-labelledby="navbarDropdown")
                            a.dropdown-item(href="/account") Account 
                            a.dropdown-item(href="#") My bookings
                   

    .content
      block content
        p This is the default!

    block scripts
      script(async="false"  src=`https://maps.googleapis.com/maps/api/js?key=${process.env.MAP_KEY}&callback=initMap`)