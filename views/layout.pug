html
  head
    title= `WildTours`
    link(rel='stylesheet', href='/css/style.css')
    link(rel="shortcut icon" type="image/png" href="/images/img/favicon.png")
    link(href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet")
